  <div class="col-md-3">
    <h2>User info</h2>
    <% if current_user.image.attached? %>
      <%= image_tag current_user.image, size: "100x100" %>
    <% else %>
      <%= image_tag 'default-image', size: "100x100" %>
    <% end %>
    <table class="table">
      <tbody>
        <tr></tr>
        <tr>
          <th>name</th>
          <th><%= current_user.name %></th>
        </tr>
        <tr>
          <th>introduction</th>
          <th><%= current_user.introduction %></th>
        </tr>
      </tbody>
    </table>
    <div class="row">
      <%= link_to edit_user_path(current_user), class: "btn btn-outline-secondary btn-block", method: :get do %>
        <i class="fas fa-user-cog"></i>
      <% end %>

    </div>
    <h2 class="mt-3">New book</h2>
    <%= form_with model: Book.new do |f| %>
      <div class="form-group">
        <%= f.label :Title %><br />
        <%= f.text_field :title %>
      </div>
      <div class="form-group">
        <%= f.label :Opinion %><br />
        <%= f.text_area :body %>
      </div>
        <%= f.submit 'Create Book', class: "btn btn-success" %><br />
    <% end %>
  </div>

