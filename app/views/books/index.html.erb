  <h2>User info</h2>
    <% if list.image.attached? %>
      <%= image_tag list.image, size: "100x100" %>
    <% else %>
      <%= image_tag 'default-image', size: "100x100" %>
    <% end %>
    <%= link_to user_id_path %>



  <h2>New book</h2>
    <%= form_with model: Book.new do |f| %>
      <div class="form-group">
        <%= f.label :Title %>
        <%= f.text_field :title %>
      </div>
      <div class="form-group">
        <%= f.label :Body %>
        <%= f.text_field :body %>
      </div>
        <%= f.submit 'Create Book' %>
     <% end %>
