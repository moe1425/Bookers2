<main>
    <div class="container px-5 px-sm-0">
      <div class="row">
         <!--User info画面-->
        <%= render 'list', books: @books %>
      
        <div class="col-md-8 offset-md-1">
          <h2>Books</h2>
          <table class="table table-hover table-inverse">
            <tbody>
              <thead>
                <tr>
                  <th></th>
                  <th>Title</th>
                  <th>Opinion</th>
                  <th colspan="3"></th>
                </tr>
              </thead>
              <% @books.each do |book| %>
                <tr>
                  <td>
                    <% if current_user.image.attached? %>
                      <%= image_tag current_user.image, size: "80x80" %>
                    <% else %>
                        <%= image_tag 'default-image', size: "80x80" %>
                    <% end %>
                  </td>
                  <td><%= link_to book.title, book_path(book.id) %></td>
                  <td><%= book.body %></td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
</main>


