<h1>New Book</h1>
  <%= form_with model: @book do |f| %>

    <div class="form_group">
      <%= f.label :Title %>
      <br><%= f.text_field :title %>
    </div>
    <div class="form_group">
      <%= f.label :Opinion %>
      <br><%= f.text_area :body %>
    </div>
    <%= f.submit 'Create Book' %>
  <% end %>