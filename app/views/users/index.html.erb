<div class="container px-5 px-sm-0">
  <div class="row">
    <!--User infoとNew bookの画面-->
    <%= render 'books/new', books: @books, user: current_user %>

    <div class="col-md-8 offset-md-1">
      <h2>Users</h2>
      <table class="table">
        <thead>
          <tr>
            <th>image</th>
            <th>name</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <% @users.each do |user| %>
          <tr>
            <td>
              <% if user.image.attached? %>
                <%= image_tag user.image, size: "80x80" %>
              <% else %>
                <%= image_tag 'default-image', size: "80x80" %>
              <% end %>
            </td>
            <td><%= user.name %> </td>
            <td><%=link_to "show", user_path(user.id) %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>